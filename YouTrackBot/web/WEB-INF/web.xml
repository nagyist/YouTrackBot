<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>YouTrackBot</servlet-name>
        <servlet-class>youtrackbot.server.YouTrackBotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>YouTrackBot</servlet-name>
        <url-pattern>/_wave/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Cronjobs</servlet-name>
        <servlet-class>youtrackbot.server.YouTrackBotCronServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cronjobs</servlet-name>
        <url-pattern>/cron/*</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Cronjobs</web-resource-name>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
